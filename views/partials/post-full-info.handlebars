    <div class="post-header">
      <p class="p-post-header">
        <a href="/">
           Home 
        </a>
        <i class="fa-solid fa-angle-right"></i>
        <a href="javascript:history.back()">
           Blogs 
        </a>
        <i class="fa-solid fa-angle-right"></i>
        <a href="" style="text-decoration:underline;">
           {{title}} 
        </a>
      </p>
    </div>
    <div class="full-post-container">
    <article class="post-full">
      <div class="title">
        <span>
            <h1 class="h1-post-full">{{title}}</h1>
        </span>
        <span class="details"><p class="p2-post-full">By {{user.username}} on {{format_date created_at}}</p></span><br>
      </div>
      <div class = "content">
          <p class="p-post-full">{{post_desc}}</p>
      </div>
      <div class = "content">
          <p class="p-post-full">{{post_text}}</p>
      </div>
      <p2 class="p2-tags-full">Tags: {{tags}}</p2>
      <div>
        <a href="javascript:history.back()">
            <button class="btn-post">Return to Blogs</button>
        </a>
      </div>
      <div class="user-info">
        <div class="row">
          <div class="col-sm-3">
            <div class="text-center">
            <img src="/images/uploaded-images/{{user.email}}.jpg" />
            </div>
          </div>
          <div class="col-sm-9">
            <h1>Posted by {{user.username}}</h1>
            <p>"{{user.bio}}"</p>
            <div class="user-info-icons">
              <a href="">
                <i class="fa-brands fa-instagram fa-2x"></i>
              </a>
              <a href="">
                <i class="fa-brands fa-twitter fa-2x"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </article>
    </div>