<div class="new-post-form">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <br>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-desc">Description</label>
            <br>

      <textarea name="post-desc">{{post.post_desc}}</textarea>
    </div>
    <div>
      <label for="post-text">Post</label>
            <br>

      <textarea name="post-text">{{post.post_text}}</textarea>
    </div>
    <div>
      <label for="post-tags">Tags</label>
            <br>

      <input name="post-tags" type="text" value="{{post.tags}}" />
    </div>
    <button type="submit" class="btn-post">Save Post</button>
    <button type="button" class="delete-post-btn">Delete Post</button>
  </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
